<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New review to <%= doctor.fname %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/doctors/<%= doctor._id %>/newreview" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="review[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>
