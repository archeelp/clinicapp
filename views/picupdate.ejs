<% include partials/header %>
<style>
    textarea {
        height: 10.0em;
        width: 100%;
        padding: 2%;
    }
</style>
    <div class="row">
        <h1 style="text-align: center">Edit Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form id="f" action="/picupdate" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="image">Profile Picture</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <h3>Description</h3>
                    <!-- <input class="form-control" type="text-area" name="description" value="<%= currentuser.description %>"> -->
                    <textarea placeholder="Description"form="f" name="description" id="" required><%= currentuser.description %></textarea>
                </div>
                <div class="form-group">
                        <h3>Address</h3>
                        <!-- <input class="form-control" type="text-area" name="address" value="<%= currentuser.address %>"> -->
                        <textarea placeholder="Address" form="f"  name="address" id="" required><%= currentuser.address %></textarea>
                    </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
<% include partials/footer %>
